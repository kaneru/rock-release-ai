{
  "extends": "@indriver/ts-config",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "types/*.d.ts"
  ],
  "compilerOptions": {
    "outDir": ".cache",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "public",
  ]
}
